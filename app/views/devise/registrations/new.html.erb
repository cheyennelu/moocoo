<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6">
      <h2 style="text-align:center;">SIGN UP</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs" style="text-align:center;">
        <%= f.input :first_name, label: false, placeholder: "First name",
        required: true,
        autofocus: true,
        input_html: { autocomplete: "first-name" }%>
        <%= f.input :last_name, label: false, placeholder: "Last name",
        required: true,
        autofocus: true,
        input_html: { autocomplete: "last-name" }%>
        <%= f.input :address, label: false, placeholder: "Address",
        required: false,
        autofocus: true,
        input_html: { autocomplete: "address" }%>
        <%= f.input :email, label: false, placeholder: "Email",
        required: true,
        autofocus: true,
        input_html: { autocomplete: "email" }%>
        <%= f.input :password, label: false, placeholder: "Password",
        required: true,
        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
        input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation, label: false, placeholder: "Re-type password",
        required: true,
        input_html: { autocomplete: "new-password" } %>
        <%= f.input :photo, as: :file %>
      <%# f.object.photo.each do |p|
        span image_tag(p)
        end %>
      </div>

      <div class="form-actions" style="text-align:center;">
        <%= f.button :submit, "SIGN UP", class: "btn btn-primary btn-block" %>
      </div>
      <% end %>
      <div style="text-align:center;">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
