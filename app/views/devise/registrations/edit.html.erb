<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6">

      <h2 style="text-align:center;">EDIT PROFILE</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs" style="text-align:center;">
        <%= f.input :first_name, label: false, placeholder: "First name",
        required: true,
        autofocus: true,
        input_html: { autocomplete: "first-name" }%>
        <%= f.input :last_name, label: false, placeholder: "Last name",
        required: true,
        autofocus: true,
        input_html: { autocomplete: "last-name" }%>
        <%= f.input :address, label: false, placeholder: "Address",
        required: false,
        autofocus: true,
        input_html: { autocomplete: "first-name" }%>
        <%= f.input :email, label: false, placeholder: "Email",
        required: true, autofocus: true %>

        <%= f.input :photo, as: :file %>
        <%# if @user.photos.attached? %>
        <%# @user.photos.each do |ph| %>

        <%# end %>
        <%# end %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :password, label: false, placeholder: "**New password",
        hint: "**leave it blank if you don't want to change it",
        required: false,
        input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation, label: false, placeholder: "Re-type new password",
        required: false,
        input_html: { autocomplete: "new-password" } %>
        <%= f.input :current_password, label: false, placeholder: "Current password to confirm changes",
        required: true,
        input_html: { autocomplete: "current-password" } %>
      </div>

      <div class="form-actions" style="text-align:center;">
        <%= f.button :submit, "UPDATE", class: "btn btn-primary btn-block" %>
      </div>
      <% end %>
      <div style="text-align:center;">
        <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

        <%= link_to "Back", :back %>
      </div>
    </div>
  </div>
</div>
