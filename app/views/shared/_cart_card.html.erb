<div class="row no-gutters card-cart bg-white my-3 rounded" id="order-<%= order.id %>">
  <div class="col-3 card-cart-img-container">
    <%= cl_image_tag order.product.photo_id[0], width: 400, crop: :fill %>
  </div>
  <div class="col-5 card-cart-name text-left px-1">
    <div class="h-100 d-flex flex-column justify-content-between">
      <div>
        <strong><%= link_to order.product.name, product_path(order.product) %></strong>
      </div>
      <div class="card-cart-description">
        <div>Quantity : <%= order.quantity %></div>
        <div>Unit Price : <%= humanized_money_with_symbol order.product.price %></div>
      </div>
    </div>
  </div>
  <div class="col-3">
    <%= humanized_money_with_symbol (order.quantity * order.product.price) %>
  </div>
  <div class="col-1 text-right">
    <%= form_tag order_path(order), method: :delete, remote: true, class: "remove-order-from-cart pt-1" do %>
      <%= button_tag type: 'submit' do %>
        <i class="fas fa-trash" aria-hidden="true"></i>
      <% end %>
    <% end %>
  </div>
</div>
