<div class="products-bought d-flex flex-wrap justify-content-center">
  <% products.each do |product| %>
    <div class="product-card-profile m-2" style="text-align:center;">
      <% if product.photos.attached? %>
        <%= cl_image_tag product.photo_id[0], width: 200, height: 200, crop: :fill %>
        <%= link_to product_path(product) do %>
          <p><%= product.name %></p>
        <% end %>
      <% else %>
        <%= link_to product_path(product) do %>
          <p><%= product.name %></p>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
