<div class="container justify-content-center">
  <%= form_tag("/search", method: :get, class: "input-group justify-content-center", style: "margin: 0 auto;") do %>
    <%= text_field_tag :q, "", class: "form-control", style: "height:2em; padding:0 10px; margin-left:5px;", placeholder: "Search for videos or products" %>
    <%= button_tag "Search", class: "btn search-button", style: "font-size:1.4em; margin-right:-3px; margin-top:-6px; padding-left:5px; padding-right:8px;" do %>
      <i class="fa fa-search"></i>
    <% end %>
  <% end %>
</div>
