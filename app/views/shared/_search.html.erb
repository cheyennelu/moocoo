<div class="container justify-content-center">
  <%= form_tag("/search", method: :get, class: "input-group justify-content-center", style: "margin: 0px auto 16px;") do %>
    <%= text_field_tag :q, "", class: "form-control", style: "height:2em;", placeholder: "Search for videos or products" %>
    <%= button_tag "Search", class: "btn", style: "font-size:1.4em; margin-right:-8px; margin-top:-6px" do %>
      <i class="fa fa-search"></i>
    <% end %>
  <% end %>
</div>
