<div class="watched-vids d-flex flex-wrap justify-content-center">
    <% videos.each do |vid| %>
      <div class="card-video-profile m-2">
        <iframe width="320" height="180" allow="autoplay" src="<%= vid.video_url %>" ></iframe>
        <div class="video-show-description">
          <div class="video-show-title py-1">
            <%= link_to vid.title, vid %>
          </div>
          <div class="video-show-info d-flex justify-content-between">
            <div><%= vid.creator %></div>
            <div>
              <i class="fa fa-thumbs-up" aria-hidden="true"></i> <%=  number_to_human(vid.likes, precision: 1, significant: false, units: { thousand: "k", million: "m", billion: "b" }) %> &nbsp
              <i class="fa fa-eye" aria-hidden="true"></i> <%=  number_to_human(vid.views, precision: 1, significant: false, units: { thousand: "k", million: "m", billion: "b" }) %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
