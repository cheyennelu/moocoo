
<div class="top bg-white">
  <nav class=" navbar navbar-expand-md">
    <%= link_to "/", class: "navbar-brand abs" do %>
      <%= image_tag "moocoo.png"%>
    <% end %>


    <div class="dropdown">


      <button type="button" class="search-icon" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="fa fa-bars fa-lg" aria-hidden="true"></i>
      </button>

      <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
        <button class="dropdown-item" type="button"><%= link_to "Home", root_path%></button>
        <button class="dropdown-item" type="button"><%= link_to "Videos", home_videos_path %></button>
        <button class="dropdown-item" type="button"><%= link_to "Products", home_products_path %></button>
      </div>
    </div>
          <ul class="navbar-nav ml-auto">
              <li class="nav-item">
              <div class="navbar-right d-flex">
                <% if user_signed_in? && current_user.photo.attached? %>
                    <button type="button" class="search-icon" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <%= cl_image_tag current_user.photo.key, height: 50, width: 50, crop: :fill %>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                      <button class="dropdown-item" type="button"><%= link_to "home", root_path %></button>
                      <button class="dropdown-item" type="button"> <%= link_to "videos", home_videos_path  %></button>
                      <button class="dropdown-item" type="button"> <%= link_to "products", home_products_path %></button>
                    </div>
                <% else %>
                  <%= link_to new_user_session_path, class: "nav-profile" do %>
                  <%= image_tag "profile.png"%>
                  <% end  %>
                <% end %>
                <%= link_to "#", class: "navbar-cart" do %>
                  <%= image_tag "cart.png"%>
                <% end %>
                </div>
              </li>
          </ul>
  </nav>

  <div class="container search-container">
    <form action="/videos" style="text-align: center;">
      <input type="text" name="q" class="input-bar" value="Search for videos" style="width: 90%">
      <button type="submit" class="search-icon">
        <i class="fa fa-search" aria-hidden="true"></i>
      </button>
    </form>
    <br>
  </div>
</div>

