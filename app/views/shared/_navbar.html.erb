<%# navbar %>
<nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top">
  <button class="navbar-toggler border-0" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <%= link_to root_path, class: 'navbar-brand' do %>
    <%= image_tag "moocoo.png", width: "60" %>
  <% end %>
  <div class="d-flex">
    <% if user_signed_in? %>
      <% if current_user.photo.attached? %>
        <%= link_to profile_path do %>
        <%= cl_image_tag @user.photo.key, height: 45, width: 45, crop: :fill, class: "rounded-circle" %>
        <% end %>
      <% else  %>
        <%= link_to profile_path do %>
        <%= image_tag "profile.png", width: "40"%>
        <% end %>
      <% end %>
    <% else %>
      <%= link_to "Login", new_user_session_path, class: "btn" %>
    <% end  %>

    <%= link_to cart_path, class: "navbar-cart" do %>
      <i class="fas fa-shopping-cart"></i>
    <% end %>
  </div>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to 'Products', home_products_path, class: 'nav-link'  %>
      </li>
      <li class="nav-item">
        <%= link_to 'Videos', home_videos_path, class: 'nav-link'  %>
      </li>
      <% if user_signed_in? %>
      <li class="nav-item">
        <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'nav-link' %>
      </li>
      <% end %>
    </ul>
  </div>
</nav>

<%# searchbar %>
<div>
  <%= render 'shared/search' %>

</div>

