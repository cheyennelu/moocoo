<div class="container">
  <div class="row cart mx-1 p-1">
    <div class="col-12 text-center">
      <h2 class="my-3">My Cart</h2>
      <div class="cart-body py-3 px-1 border-top">
        <% if @orders.present? %>
          <% @orders.each do |order| %>
            <%= render partial: "shared/cart_card", locals: { order: order } %>
          <% end %>
          <div class="total-price p-2 my-2 rounded bg-white">
            <h4>TOTAL : SGD <%= @total_price %></h4>
          </div>
          <%= form_tag purchases_path, method: :post, class: "review-order-button" do %>
            <%= hidden_field_tag 'orders', @purchased_orders %>
          <%= submit_tag 'Review Orders', class: 'btn btn-primary' %>
          <div class="mt-3" style="color:rgba(0,0,0,0.7);">
            <div>*Payment is securely done by</div>
            <div><i class="fab fa-stripe" style="font-size: 2em;"></i></div>
          </div>
          <% end %>
        <% else %>
          <h2 class="py-3">Oops! Your cart is empty!</h2>
          <%= link_to "Browse for more", products_path, class: "btn btn-primary mt-5" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
