<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <h2 class="mt-3">My Cart</h2>
      <div class="cart-body">
        <% if @orders.present? %>
          <% @orders.each do |order| %>
            <%= render partial: "shared/cart_card", locals: { order: order } %>
          <% end %>
          <div class="total-price p-4 my-3 rounded bg-white">
            <h3>TOTAL PRICE : SGD <%= @total_price %></h3>
          </div>
          <%= form_tag purchases_path, method: :post, class: "review-order-button" do %>
            <%= hidden_field_tag 'orders', @purchased_orders %>
          <%= submit_tag 'Review Orders', class: 'btn btn-primary my-2' %>
          <% end %>
        <% else %>
          <h2 class="py-3">Oops! Your cart is empty!</h2>
        <% end %>
      </div>
    </div>
  </div>
</div>
