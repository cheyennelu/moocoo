
  <div class="container index-brand-container">
    <h3>Brand Partners</h3>
    <%#= to show the brand page with 2 of the items being shown as well %>
    <% @brands.each do |brand| %>
      <div class="row">
        <div class="col-12">
          <%= link_to brand_path(brand.id) do %>
          <%= image_tag brand.image_file_path %>
          <% end %>
        </div>
      </div>
      <div class="brand-grid">
      <% @products.where(brand_id: brand.id).each do |p| %>
        <div class="brand-cart">
          <div class="card-product bg-white">
            <div class="card-product-img">
            <%= cl_image_tag p.photo_id[1], width: 400, crop: :fit %>
            </div>
            <div class="card-product-body p-2">
              <%= p.name %>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    <% end  %>
  </div>
