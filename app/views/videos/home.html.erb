<div class="container">
  <p>
    <%= link_to "See all videos", videos_path, class: 'btn btn-primary btn-xs' %>
  </p>
  <p class="title">Trending</p>
  <div class="holster">
    <div class="container-snap x mandatory-scroll-snapping" dir="ltr">
      <div><iframe id="video" width="100%" height="400vh" src="<%= @video_t1.video_url %>" ></iframe></div>
      <div><iframe id="video" width="100%" height="400vh" src="<%= @video_t2.video_url %>" ></iframe></div>
      <div><iframe id="video" width="100%" height="400vh" src="<%= @video_t3.video_url %>" ></iframe></div>
      <div><iframe id="video" width="100%" height="400vh" src="<%= @video_t4.video_url %>" ></iframe></div>
      <div><iframe id="video" width="100%" height="400vh" src="<%= @video_t5.video_url %>" ></iframe></div>
    </div>
  </div>
</div>
<br>
<br>
<div class="container">
  <p class="title" style="text-align: center;" >Recently Released</p>
  <div class="scrollmenu invisible-scrollbar">
  <% @videos.each do |vid| %>
    <div class="card-video">
    <iframe width="40%" src="<%= vid.video_url %>" ></iframe>
    <div class="card-video-infos">
      <h2><%= link_to vid.title, vid %></h2>
      <p><%= vid.creator %></p>
    </div>
    </div>
  <% end %>
  </div>
</div>
<br>
<br>
<div class="container">
  <p class="title" style="text-align: center;">Popular Videos</p>
    <%= render 'shared/video_display', videos: @videos %>
</div>
