<!-- Control buttons -->
<div id="myBtnContainer">
  <button class="btn-filter active" onclick="filterSelection('all')"> All</button>
  <button class="btn-filter" onclick="filterSelection('creator')"> Creator</button>
  <button class="btn-filter" onclick="filterSelection('likes')"> Likes</button>
  <button class="btn-filter" onclick="filterSelection('views')"> Views</button>
</div>

<!-- The filterable elements. Note that some have multiple class names (this can be used if they belong to multiple categories) -->
<div class="filter-container">
  <div class="filter All">
    <%= render 'shared/video_display', videos: @videos %>
  </div>

  <div class="filter Creator">
    <%= render 'shared/video_display', videos: @creators %>
  </div>

  <div class="filter Likes">
    <%= render 'shared/video_display', videos: @likes %>
  </div>

  <div class="filter Views">
    <%= render 'shared/video_display', videos: @views %>
  </div>

</div>
