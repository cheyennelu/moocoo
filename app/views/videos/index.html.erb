<div class="container">
  <div class="row">
    <div class="col-12"><!-- Control buttons -->
      <div class="d-flex justify-content-around" style="position:sticky; top:0; background-color:white;" id="myBtnContainer">
        <button class="btn-filter btn active" data-tabs="all"> All</button>
        <button class="btn-filter btn" data-tabs="creator"> Creator</button>
        <button class="btn-filter btn" data-tabs="likes"> Likes</button>
        <button class="btn-filter btn" data-tabs="views"> Views</button>
      </div>

      <!-- The filterable elements. Note that some have multiple class names (this can be used if they belong to multiple categories) -->
      <div class="filter-container">
        <div class="filter all">
          <%= render 'shared/video_display', videos: @videos %>
        </div>

        <div class="filter creator">
          <%= render 'shared/video_display', videos: @creators %>
        </div>

        <div class="filter likes">
          <%= render 'shared/video_display', videos: @likes %>
        </div>

        <div class="filter views">
          <%= render 'shared/video_display', videos: @views %>
        </div>

      </div>
    </div>
  </div>
</div>
