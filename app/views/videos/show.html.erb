<div class="main-video-container">
  <iframe width="100%" height="240" allow="autoplay" src="<%= @video.video_url %>" class="main-video"></iframe>
</div>
<div class="container">
  <div class="card-video-show">
    <div class="card-video-show-infos">
      <div>
        <h2 style="font-size: 14px;"><%= @video.title %></h2>
        <p style="font-size: 14px; padding-top: 2px;"><%= @video.creator %></p>
      </div>
      <h2 class="card-video-show-infos right-info" style="font-size: 14px;">
        <i class="fa fa-thumbs-up" aria-hidden="true"></i> &nbsp <%=  number_with_delimiter(@video.likes, :delimiter => ',') %> &nbsp
        <i class="fa fa-eye"  aria-hidden="true"></i> &nbsp <%= number_with_delimiter(@video.views, :delimiter => ',') %>
    </div>
  </div>
</div>
<div class="container mt-3">
  <p class="title" style="font-size: 18px; text-align: center;">Shop the Look</p>
  <% @annotations.each do |a| %>
    <p id="p_<%= "#{a.product.id}" %>"></p>
    <div class="card-video card-prod">
      <%= cl_image_tag a.product.photos.first.key, width: 200, crop: :fill %>
      <div class="card-video-infos">
        <h2><%= link_to a.product.name, a.product %></h2>
        <p><%= a.product.description[0..140].gsub(/\s\w+\s*$/,'...') %></p>
        <button class="jump-btn btn-primary" data-url="<%= @video.video_url %>" data-point="90" >Jump to Point 1</button>
      </div>
      <div class="card-video-infos info-right">
        <h2 ><%= humanized_money_with_symbol a.product.price %></h2>

        <%= simple_form_for(@order, method: :post, url: vidcreateorder_path, :remote => true,  html: { class: :item }) do |f| %>
          <%= f.input :product,  :as => :hidden, :input_html => { :value => a.product.id } %>
          <%= f.input :quantity, label: false, :input_html => { :id => "quantity" }, :collection => 1..12, :prompt => "-- Select Quantity --"%>
          <%= button_tag type: 'submit', class: "cart" do %>
            <i class="fa fa-shopping-cart" aria-hidden="true"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>


