<div class="container">
  <% if @product.photos.attached? %>
  <%= render partial: "shared/tab_images", locals: { photos: @product.photos } %>
  <% end %>

  <div class="row">
    <div class="col-12 product-show-info">
      <div class="row mt-3">
        <div class="col-8">
          <h4><%= @product.name %></h4>
        </div>
        <div class="col-4 text-right">
          <h4><%= humanized_money_with_symbol @product.price %></h4>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <%= simple_form_for(@order, method: :post, url: vidcreateorder_path, :remote => true,  html: { class: :item }) do |f| %>
            <%= f.input :product,  :as => :hidden, :input_html => { :value => @product.id } %>
            <div class="d-flex align-middle justify-content-between">
              <div class="quantity d-flex align-middle">
                <div class="m-auto pr-2">Quantity : </div>
                <%= f.input :quantity, label: false, :input_html => { :id => "quantity" }, :collection => 1..12, :prompt => "--"%>
              </div>
              <%= button_tag type: 'submit', class: "cart btn btn-primary" do %>
                Add to <i class="fa fa-shopping-cart text-white" aria-hidden="true"></i>
              <% end %>
            </div>
          <% end %>
          <p class="mt-3"><%= @product.description %> </p>
        </div>
      </div>
    </div>
  </div>

  <div class="row border-top border-dark border-3 pt-3">
    <div class="col-12">
      <h3>Admin only : Images you have</h3>
      <% if @product.photos.attached? %>
      <div class="product-imgs">
        <% @product.photos.each do |photo| %>
        <div class="product-img-container text-center">
          <%= cl_image_tag photo.key, width: 400, crop: :fill %>
          <%= link_to "Delete", product_photo_path(@product, photo), method: :delete %>
        </div>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>

  <div class="row border-top border-dark border-3 py-3 mt-3">
    <div class="col-12">
      <h3>Admin only : Add Images</h3>
      <%= simple_form_for @product, url: product_path(@product) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :photos, as: :file, inner_html: { multiple: true } %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Add image", class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
