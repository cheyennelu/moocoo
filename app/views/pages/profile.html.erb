<div class="container" style="max-width:1000px;">
  <div class="row profile no-gutters align-items-center py-3 border-bottom">
    <div class="profile-photo col-2">
      <% if @user.photo.attached? %>
        <%= cl_image_tag @user.photo.key, width: 56, height: 56, crop: :fill, class: 'avatar-large' %>
      <% else %>
        <%= image_tag('profile.png', class: 'avatar-large') %>
      <% end %>
    </div>
    <div class="col-8 profile-name">
      <div class="mx-2"><%= @user.first_name %> <%= @user.last_name %></div>
    </div>
    <div class="col-2 text-right">
      <%= link_to edit_user_registration_path, class: "btn btn-xs" do %>
        <i class="fas fa-edit"></i>
      <% end %>
    </div>
  </div>
  <div class="container">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">My Videos</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">My Purchases</a>
      </li>

    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
        <%= render 'shared/video_display', videos: @watched_videos %>
      </div>
      <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <%= render 'shared/product_display', products: @products %>
      </div>
    </div>
  </div>
</div>
