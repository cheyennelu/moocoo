<div class="container" style="max-width:1000px;" data-controller='filter'>
  <div style="text-align:center;">
    <h2>Search Results</h2>
      <input type="radio" class="btn-filter" name="video" data-action="change->filter#change">Videos
      <input type="radio" class="btn-filter" name="product" data-action="change->filter#change">Products
      <input type="radio" class="btn-filter" name="brand" data-action="change->filter#change">Brands
  </div>


  <div class="search-container">
    <div class="video" data-filter-target="videoresult">
      <% if @video_results.empty? %>
        <p>No videos matched your search</p>
      <% else %>
        <h4>Videos matching your search:</h4>
        <div class="search-video-container my-3 filter videos-search" style="text-align:center;">
          <%= render 'shared/video_display', videos: @video_results %>
        </div>
      <% end %>
    </div>

    <div class="product" data-filter-target="productresult">
      <% if @product_results.empty? %>
        <p>No products matched your search</p>
      <% else %>
        <h4>Products matching your search:</h4>
        <div class="search-product-container my-3 filter products-search" style="text-align:center;">
          <%= render 'shared/product_display', products: @product_results %>
        </div>
      <% end %>
    </div>
  </div>

</div>


