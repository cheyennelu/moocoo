<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('/assets/images/home-banner.jpg');">
  <div class="container">
    <h1>moocoo</h1>
    <p>Unleash your beauty</p>
  </div>
</div>

<%#= Promotional Video section of the Home Page  %>


  <div class="home-page-container mt-5">
    <iframe id="video" width="100%" height="200vh" src= <%="#{@video.first.video_url}"%>></iframe>
  </div>
  <div class="home-page-container">
      <h4>Popular Looks</h4>
      <div class="d-flex justify-content-around">
      <%#= @trends - see pages controller %>
        <% @trends.each do |trend| %>
          <div class="card rounded" style="width: 7rem;">
            <div class="card-body text-center">
              <%= link_to search_path(q:trend), class:"card-link text-light" do %>
                <%= trend %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

    <%#= Added ID to control the circle button  %>
    <div class="d-flex justify-content-center mt-2">
      <i class="fas fa-circle mx-2 black-circle"></i>
      <i class="fas fa-circle mx-2 black-circle"></i>
      <i class="fas fa-circle mx-2 black-circle"></i>
    </div>
  </div>
<%#= Latest Trend Portion  %>
  <div class="home-page-container">
    <h4>Latest Trends</h4>
      <div class="container d-flex justify-content-between text-center">
          <div class="video-trend">
          <iframe class="video" width="85px" height="79px" src= <%="#{@video.first.video_url}"%> ></iframe>
          <p>Glitter Eyes</p>
