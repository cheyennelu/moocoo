      </div>
    </div>
  </div>
</div>
<%#= Shop by Products Portion  %>
<div class="dark-container py-3 my-3">
  <h4 class="py-2">Shop by Products</h4>
  <div class="d-flex justify-content-around my-2 mx-3">
    <% @featured_products.each do |product|  %>
      <div class="card rounded mx-3" style="width: 7rem;">
        <div class="product-card-body bg-white">
          <%= link_to search_path(q:product), class:"card-link text-dark" do %>
            <%= product %>
          <% end %>
        </div>
      </div>
    <% end  %>
  </div>

</div>
