<div class="container">
  <div style="display: flex; justify-content: space-between;">
    <h1 class="title" style="padding-top: 0.375rem;">Forum</h1>
    <%= link_to "New Topic", new_forum_path, class: "btn btn-primary" %>
  </div>
  <br>
  <ul class="list-group">
    <% @topics.each do |topic| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to topic.name, topic %>
      <span class="badge badge-primary badge-pill"><%= topic.messages.count %></span>
    </li>
    <% end %>
  </ul>
</div>
