  <div class="add-topic container">
    <h1 class="title" style="margin-bottom: 20px;">Add A Topic</h1>
    <form action="/forums" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

      <div class="form-group">
        <label for="Topic">Topic Title</label>
        <input type="text" class="form-control" name="Topic" aria-describedby="emailHelp" placeholder="What topic to you want to talk about?">
      </div>
      <br>
      <div class="form-group">
        <label for="Message" style="font-weight: bold;">Start the Conversation!</label>
        <div class="form-group row">
          <label for="title" class="col-sm-2 col-form-label">Message Title</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="Title">
          </div>
        </div>
        <div class="form-group row">
          <label for="content" class="col-sm-2 col-form-label">Message Body</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="Body">
          </div>
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
